<form id="new_template" action="/new_template" method="post">
  <input type="hidden" name="addEvent" value="addEvent">
  <div class="row">
    <div class="col-md-12">
      <h3>Create New Event Template</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label>Title</label>
      <input type="text" class="form-control" name="title" required="true">

      <!-- <label>Duration (hh:mm)</label>
      <input type="text" class="form-control" placeholder="Duration" name="duration"> -->

      <label class="formControl1">Duration<br><select name="duration_hours" id="duration_hours" class="formControl1">
        <% 24.times do |hours|%>
          <option value="<%= hours %>"><%= hours %></option>
        <% end %>
      </select>
      :
      <select name="duration_mins" id="duration_mins">
        <% 60.times do |mins| %>
          <option  value="<%= mins %>"><%= mins %></option>
        <%end %>
      </select>
    </label>
    <br><br>

    <fieldset>
      <legend>Default Coach Fee</legend>
      <div class="currencies">
        <% count = -1 %>
        <% for coach_fee in @new_template_view.coach_fees %>
          <% count += 1 %>
          <label><%= coach_fee.currency %></label>
          <input type="text" name="amount<%=count%>" class="form-control" value="<%= coach_fee.amount %>" required="true">
          <input type="hidden" name="currency<%=count%>" value="<%= coach_fee.currency %>">
        <% end %>
        <input type="hidden" name="count" value="<%= count %>">

      </div>
    </fieldset>

    </div>

    <div class="col-md-6">
      <label>Description</label>
      <textarea name="description" class="form-control descript"></textarea>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <input class="btn btn-success pull-right apply" type="submit" value="Create Template" name="action">
      <a href="/" class="btn btn-default btn-xs pull-right cancel">Cancel</a>
    </div>
  </div>
</form>
