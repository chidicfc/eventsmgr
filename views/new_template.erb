<form id="new_template" action="/new_template" method="post">
  <h1>Create New Event Template</h1>
  <p><label>Title<br><input type="text" name="title" value="" size="50" required="true"></label></p>

  <p><label>Duration<br><select name="duration_hours" id="duration_hours">
    <% 24.times do |hours|%>
      <option value="<%= hours %>"><%= hours %></option>
    <% end %>
  </select>
  :
  <select name="duration_mins" id="duration_mins">
    <% 60.times do |mins| %>
      <option  value="<%= mins %>"><%= mins %></option>
    <%end %>
  </select>
  </label></p>

  <fieldset>
  <legend>Default Coach Fee</legend>
    <% count = -1 %>
    <% for coach_fee in @new_template_view.coach_fees %>
      <% count += 1 %>
      <p><label><%= coach_fee.currency %><br><input type="text" name="amount<%=count%>" value="<%= coach_fee.amount %>" required="true"><input type="hidden" name="currency<%=count%>" value="<%= coach_fee.currency %>" required="true"></label></p>
    <% end %>
    <input type="hidden" name="count" value="<%= count %>">
  </fieldset>
  <p><label>Description<br><textarea name="description" rows="5" cols="30" required="true"></textarea></label></p>
  <p><a href="/">Cancel</a>&nbsp;<input type="submit" name="action" value="Create Template"></p>
</form>
